name: 'GitHub Actions Mirror'

on: 
  workflow_dispatch:

jobs:

  mirror_to_gitlab:
    runs-on: ubuntu-latest
    steps:
      - name: 'Checkout'
        uses: actions/checkout@v1
      - name: 'Mirror to gitlab'
        uses: pixta-dev/repository-mirroring-action@v1
        with:
          target_repo_url:
            git@gitlab.com:rwkgyg/heroku-vlvmtrshso.git
          ssh_private_key:
            ${{ secrets.private_key }}           
  mirror_to_bitbucket:
    runs-on: ubuntu-latest
    steps:
      - name: 'Checkout'
        uses: actions/checkout@v1
      - name: 'Mirror to bitbucket'
        uses: pixta-dev/repository-mirroring-action@v1
        with:
          target_repo_url:
            git@bitbucket.com:rwkgyg/heroku-vlvmtrshso.git
          ssh_private_key:
            ${{ secrets.private_key }}
